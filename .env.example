# Monica API Configuration
MONICA_API_URL=https://app.monicahq.com/api
MONICA_API_TOKEN=your-monica-api-token-here
MONICA_API_TIMEOUT=30s
MONICA_API_MAX_RETRIES=3
MONICA_API_RATE_LIMIT=60

# MCP Server Configuration
MCP_WEBSOCKET_MAX_SESSIONS=10
MCP_WEBSOCKET_PING_INTERVAL=30s
MCP_WEBSOCKET_PONG_TIMEOUT=10s
MCP_WEBSOCKET_ALLOWED_ORIGINS=*
MCP_WEBSOCKET_BUFFER_SIZE=8192
MCP_AUTH_ENABLED=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_WINDOW_SIZE=10
CIRCUIT_BREAKER_MIN_CALLS=5
CIRCUIT_BREAKER_WAIT_DURATION=10s
CIRCUIT_BREAKER_FAILURE_RATE=50

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_WAIT_DURATION=1s

# Logging Configuration
LOG_LEVEL_MCP=INFO
LOG_LEVEL_SPRING_WEB=WARN
LOG_LEVEL_WEBSOCKET=INFO
LOG_LEVEL_SECURITY=WARN

# JVM Configuration
JAVA_OPTS=-Xmx512m -Xms256m -XX:+UseG1GC -XX:MaxGCPauseMillis=100

# Spring Profile
SPRING_PROFILES_ACTIVE=docker